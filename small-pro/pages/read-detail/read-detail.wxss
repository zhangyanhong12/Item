.icon{
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    top:180rpx;
    right:200rpx;
}
.content-icon{
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    top:180rpx;
    right: 50rpx;
}
.img{
    width: 100%;
    height: 500rpx;
}
.item{
    display: flex;
    align-items: center;
    height: 80rpx;
    margin-top:20rpx;
}
.item-img{
    width: 80rpx;
    height: 80rpx;
}
.item text{
    font-size: 14px;
    margin-left:40rpx;
    color:#666;
}
.item .name{
    font-size: 16px;
}
.content{
    font-size: 20px;
     border-bottom:1px solid rgb(163, 159, 159);
     height: 200rpx;
     padding:20rpx 20rpx;
     position: relative;
}
.last{
    font-size: 14px;
    color:#666;
    padding: 20rpx 20rpx;
    margin-top:50rpx;
}
.last-top{
    margin-bottom:20rpx;
}
.music{
    width:80rpx;
    height: 80rpx;
    position: absolute;
    top:200rpx;
    left:50%;
    transform: translateX(-50%);
}
